<?xml version="1.0" encoding="UTF-8"?>
<portal-configuration>
	<layout>
		<place name="north">
			<parts>
				<part name="first.neum" place="center" />
			</parts>
		</place>
		<place name="west">
		</place>
		<place name="center">
			<parts>
				<part name="second.menu" place="west" />
				<place name="center">
					<parts>
						<part name="title" place="south" />
						<part name="content" place="center" />
						<part name="page" place="north" />
					</parts>
				</place>
			</parts>
		</place>
		<place name="east">
		</place>
		<place name="sourth">
			<parts>
				<part name="help" place="center" />
			</parts>
		</place>
	</layout>

	<parts>
		<part name="page">
			<content><![CDATA[${page.total}#{page.total}${page.line} #{page.current}/#{page.total} ${page.per}:#{page.per}]]></content>
		</part>
		<part name="help">
			<content><![CDATA[/p:${help.page} /s:${help.search}]]></content>
		</part>
	</parts>
	
	<extensions>
		<extension point="layout">
		</extension>
		<extension point="parts">
		</extension>
	</extensions>
</portal-configuration>
