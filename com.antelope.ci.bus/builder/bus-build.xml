<?xml version="1.0" encoding="UTF-8"?>
<project name="ant build for CI Bus" basedir="." default="build">
	<property file="build.properties" />

	<target name="build" depends="init">
		
	</target>

	<target name="init" depends="clean">
		<mkdir dir="${src.root}" />
		<mkdir dir="${app.root}" />
		<mkdir dir="${app.bin}" />
		<mkdir dir="${app.etc}" />
		<mkdir dir="${app.lib}" />
		<mkdir dir="${app.lib.ext}" />
		<mkdir dir="${app.plugin}" />
		<mkdir dir="${app.system}" />
		<mkdir dir="${app.system.ext}" />
	</target>

	<target name="clean">
		<delete dir="${src.root}" />
		<delete dir="${app.root}" />
	</target>

</project>