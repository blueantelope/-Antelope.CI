<project name="maven script" basedir=".">
	<property file="build.properties" />
	
	<target name="common.compile-unix">
		<exec executable="mvn">
			<arg line="-f ${prj.common.pom}" />
			<arg line="install" />
		</exec>
	</target>
	
	<target name="common.compile-win">
		<exec executable="cmd">
			<arg line="/c" />
			<arg line="mvn" />
			<arg line="-f ${prj.common.pom}" />
			<arg line="install" />
		</exec>
	</target>

