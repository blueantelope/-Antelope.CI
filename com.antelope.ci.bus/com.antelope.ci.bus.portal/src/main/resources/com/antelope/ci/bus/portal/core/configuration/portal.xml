<?xml version="1.0" encoding="UTF-8"?>
<portal>
	<!-- base -->
	<base />
	
	<!-- action -->
	<action>
		<hit name="switch_portal">
			<font style="bold" mark="lt" size="medium" />
		</hit>
	</action>
	
	<!-- layout -->
	<layout>
		<place name="north">
			<parts>
				<part name="banner" place="north" origin="global" />
				<part name="first.menu" place="center" origin="part" display="joint">
					<render align="center">
						<font style="normal" mark="shade" size="medium" />
						<delimiter value="|" position="middle" margin="before:3,after:3" />
					</render>
				</part>
			</parts>
		</place>
		<place name="west">
		</place>
		<place name="center">
			<parts>
				<part name="second.menu" place="west" origin="part" />
				<place name="center">
					<parts>
						<part name="title" place="north" origin="part" />
						<part name="content" place="center" origin="part" />
						<part name="page" place="south" origin="global" />
					</parts>
				</place>
			</parts>
		</place>
		<place name="east">
		</place>
		<place name="south">
			<parts>	
				<part name="help" place="center" origin="global" />
			</parts>
		</place>
	</layout>

	<!-- part -->
	<parts>
		<part name="banner">
			<content>
				<text><![CDATA[${banner.title}]]></text>
			</content>
		</part>
		<part name="page">
			<content>
				<text><![CDATA[${page.total}#{page.total}${page.line} #{page.current}/#{page.total} ${page.previous} ${page.next} ${page.end} ${page.per}:#{page.per}]]></text>
			</content>
		</part>
		<part name="help">
			<content>
				<text><![CDATA[/p:${help.page} /s:${help.search}]]></text>
			</content>
		</part>
	</parts>
	
	<!-- extension -->
	<extensions>
		<extension point="base">
		</extension>
		<extension point="layout">
		</extension>
		<extension point="parts">
		</extension>
	</extensions>
</portal>
