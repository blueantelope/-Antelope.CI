<?xml version="1.0" encoding="UTF-8"?>
<portal>
	<extensions>
	
		<extension point="base" >
			<base name="usecase" order="2" embed="replace">
			</base>
		</extension>
		
		<extension point="layout">
			<parts name="center" embed="replace">
					<part name="second.menu" place="west" origin="part" />
					<place name="center">
						<parts>
							<part name="title" place="north" origin="part" />
							<part name="content" place="center" origin="part" />
							<part name="page" place="south" origin="global" />
						</parts>
					</place>
			</parts>
		</extension>
		
		<extension point="parts">
			<part name="first.menu" embed="append" sort="2" mode="horizontal">
				<contents>
					<content type="text">
						<value><![CDATA[${first.menu}]]></value>
					</content>
				</contents>
			</part>
			
			<part name="second.menu" embed="replace">
				<contents>
					<content type="text">
						<value><![CDATA[${second.menu1}
${second.menu2}
${second.menu3}
${second.menu4}
				]]>
						</value>
					</content>
				</contents>
			</part>
			
			<part name="title" embed="replace">
				<contents>
					<content type="text">
						<value><![CDATA[${title}]]></value>
					</content>
				</contents>
			</part>
			
			<part name="content" embed="replace">
				<contents>
					<content type="text">
						<value><![CDATA[${content.line1}
${content.line2}
${content.line3}
				]]>
						</value>
					</content>
				</contents>
			</part>
		</extension>
		
	</extensions>
</portal>
