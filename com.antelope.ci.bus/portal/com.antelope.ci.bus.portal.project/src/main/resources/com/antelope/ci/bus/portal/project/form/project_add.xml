<?xml version="1.0" encoding="UTF-8"?>
<form>
	<style>
		<font style="normal" mark="shade" size="medium" />
		<align position="center" fill=" " margin="before:3,after:3" />
	</style>
	<input type="textfield" widget="field" name="_default">
		<box>
			<up active="off"></up>
			<left active="off"></left>
			<right active="off"></right>
			<bottom active="on"><![CDATA[_<n:95>{10}]]></bottom>
		</box>
	</input>
	<content>
		<title value="${project.add.title}">
			<style>
				<font style="normal" mark="shade" size="medium" />
				<align position="center" fill=" " margin="before:3,after:3" />
			</style>
		</title>
		<attribute focus="project.name->field">
		</attribute>
		<group>
			<component type="textfield" name="project.name">
				<label length="100" row_size="0" column_width="20%" name="project.add.name" value="${project.add.name}" edit="close" focus="off">
					<style>
						<font style="normal" mark="normal" size="medium" />
						<align position="left" fill=" " margin="before:3,after:3" />
					</style>
				</label>
				<field length="100" row_size="0" column_width="80%" value="" edit="open" focus="on">
					<style>
						<font style="normal" mark="normal" size="medium" />
						<align position="left" fill=" " margin="before:3" />
					</style>
				</field>
			</component>
		</group>
		<group>
			<component type="textfield" name="project.desc" input="_default">
				<label length="100" row_size="0" column_width="20%" name="project.add.desc" value="${project.add.desc}" edit="close">
					<style>
						<font style="normal" mark="normal" size="medium" />
						<align position="left" fill=" " margin="before:3,after:3" />
					</style>
				</label>
				<field length="100" row_size="0" column_width="80%" value="" edit="open">
					<style>
						<font style="normal" mark="normal" size="medium" />
						<align position="left" fill=" " margin="before:3" />
					</style>
				</field>
			</component>
		</group>
	</content>
</form>